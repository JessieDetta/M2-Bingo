      ["JOKER", "noch im Pyjama", "x Tage bis Examen", "20 Tabs offen", "beim Lernen eingeschlafen", "Instagram verloren", "Eltern fragen nach Lernstand", ">85% gekreuzt"],
      ["Panik wegen Zeitplan", "Existenzkrise", "Stolz empfunden", "Neid auf Sommer ohne Stex", "Zimmer aufger√§umt", "Snacks organisiert", "Bad geputzt", "Shopping als Belohnung"],
      ["Energy Drink vor 10 Uhr", "Sport gemacht", "Treffen abgesagt", "Lerngruppe", "WLAN-Ausfall", "Strategie ge√§ndert", "Netflix-Fehler bemerkt", "JOKER"]
    ];

    function loadState() {
      const saved = JSON.parse(localStorage.getItem("bingoState") || "[]");
      document.querySelectorAll(".bingo-cell").forEach((cell, index) => {
        if (saved[index]) cell.classList.add("checked");
      });
    }

    function saveState() {
      const states = Array.from(document.querySelectorAll(".bingo-cell"))
        .map(cell => cell.classList.contains("checked"));
      localStorage.setItem("bingoState", JSON.stringify(states));
    }

    function resetBingo() {
      document.querySelectorAll(".bingo-cell").forEach(cell => {
        cell.classList.remove("checked");
      });
      localStorage.removeItem("bingoState");
    }

    // Erstelle Zellen
    cells.forEach(row => {
      row.forEach(text => {
        const cell = document.createElement("div");
        cell.classList.add("bingo-cell");
        if (text === "JOKER") {
          cell.classList.add("joker");
          cell.innerHTML = "Joker<br>üÉè";
        } else {
          cell.textContent = text;
        }
        cell.addEventListener("click", () => {
          cell.classList.toggle("checked");
          saveState();
        });
        grid.appendChild(cell);
      });
    });

    // Beim Laden Status wiederherstellen
    window.addEventListener("load", loadState);
  </script>
